@model Baseline.Models.NEWCC.KissingCousinsViewModel

@{
    ViewBag.Title = "Inbreeding";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@if (Model.Banners != null && Model.Banners.Count > 0)
{
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Banners.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    @Html.Raw(Model.Banners[i].RenderHtml())
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <script type="text/javascript">
        $('.carousel').carousel()
    </script>
    <style>
        .CTAHero {
            min-height: 200px;
            position: relative;
        }

            .CTAHero a {
                position: absolute;
                right: 120px;
                bottom: 50px;
                color: white;
            }
    </style>
}

<h1>@Model.PageName</h1>

@Html.Kentico().EditableArea("Widgets")
